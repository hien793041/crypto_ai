{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning",
            "System": "Information",
            "Microsoft": "Error"
        },
        "File": {
            "Path": "/Logs/Log.txt",
            "Append": true,
            //"MinLevel": "Warning", // min level for the file logger
            "FileSizeLimitBytes": 1048576, // use to activate rolling file behaviour - 1MB
            "MaxRollingFiles": 0 // use to specify max number of log files
        }
    },
    "AllowedHosts": "*",
    "ConnectionStrings": {
        "ONEConnection": "Server=localhost;User Id=postgres; Password=123456;Database=ONE;Integrated Security=true"
    },
    "AppSettings": {
        "Key": "your-key"
    }
}
